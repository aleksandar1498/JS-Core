{{>header}}
<div class="row form-layout p-5">
		<div class="col-md-12">
			<div class="recepieInfo">
				<div class="detailsFoodImage">
					<img src="{{this.foodImageURL}}"
						alt="">
				</div>

				<div class="infoPack">
					<h3 class="my-3">Meal Name</h3>
					<p class="prep-method">{{this.prepMethod}}</p>
					<p class="description">{{this.description}}</p>
				</div>
				<div class="actions">
				{{#if isAuthor}}
					<a class="btn btn-danger" href="#delete/{{this._id}}">Archive</a>
					<a class="btn btn-info" href="#/edit/{{this._id}}">Edit</a>
				{{else}}
					<a class="btn btn-success" href="#/like/{{this._id}}"> {{this.likesCounter}} likes</a>
				{{/if}}
				   
				   
				</div>
			</div>

			<div class="detailsIngredients">
				<h3 class="my-3 ingredient">Ingredients</h3>
				<ul>
					{{#each ingredients}}
						<li>{{this}}</li>
					{{/each}}
				</ul>
			</div>
		</div>
	</div>
{{>footer}}
