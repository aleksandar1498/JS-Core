{{>header}}
<section id="viewEditAd" class="viewEditAd">
        <h1 class="titleForm">Edit existing advertisement</h1>
        <form id="formEditAd" class="form" method="POST" action="#/edit/{{adward._id}}">
            <div><input type="hidden" name="id" required value="{{adward._id}}"/></div>
            <div><input type="hidden" name="publisher" required value="{{adward.publisher}}"/></div>
			 <div><input type="hidden" name="datePublishing" value="{{adward.datePublishing}}" /></div>
            <div>Title:</div>
            <div><input type="text" name="title" required value="{{adward.title}}"/></div>
            <div>Description:</div>
            <div><textarea name="description" rows="10" value="{{adward.description}}" required>{{adward.description}}</textarea></div>
           
            <div>Price:</div>
            <div><input type="number" step="0.01" name="price" required value="{{adward.price}}"/></div>
            <div><button type="submit">Edit</button></div>
        </form>
    </section>
{{>footer}}
